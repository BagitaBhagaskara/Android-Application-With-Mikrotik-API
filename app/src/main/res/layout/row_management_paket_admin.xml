<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/managementPaket_namaPaket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nama Peket"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kecepatan\t\t:"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi\t\t\t\t\t:"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga\t\t\t\t\t:"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""/>

                    <TextView
                        android:id="@+id/managementPaket_kecepatanPaket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kecepatan"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/managementPaket_durasiPaket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi"/>

                    <TextView
                        android:id="@+id/managementPaket_hargaPaket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"/>
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/managementPaket_ButtonEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Voucher"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"

                    style="@style/loginButton" />
                <Button
                    android:id="@+id/managementPaket_ButtonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Voucher"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/merah"
                    style="@style/loginButton"/>
            </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>