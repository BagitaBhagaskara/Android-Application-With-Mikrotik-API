<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hotspot_user_admin">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:background="@color/colorPrimaryAdmin">
               <ImageView
                   android:id="@+id/hotspot_user_admin_kembali"
                   android:layout_marginStart="5dp"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/kembali_putih"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_marginRight="10dp"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:orientation="vertical">
                       <ImageView
                           android:id="@+id/hotspot_user_admin_refresh"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:src="@drawable/refresh_putih"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:textSize="11dp"
                           android:text="Refresh"/>
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/hotspot_user_admin_warning"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:visibility="gone"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/warning_orange"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Anda belum terhubung ke jaringan mikrotik"/>
               </LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="silahkan periksa konfigurasi login Mikrotik"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="20dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="USER HOTSPOT"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:background="@drawable/form_corner"
                   android:textSize="20dp"
                   android:gravity="center"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/black"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:paddingVertical="10dp"
                   android:background="@color/black"
                   android:orientation="horizontal"
                   android:layout_marginBottom="5dp">
                   <LinearLayout
                       android:layout_width="75dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:layout_marginHorizontal="2dp"
                       android:orientation="vertical"
                       android:background="@color/darkTextColor">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textSize="10dp"
                           android:gravity="center"
                           android:background="@color/white"
                           android:text="SERVER"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="75dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:layout_marginHorizontal="2dp"
                       android:orientation="vertical"
                       android:background="@color/darkTextColor">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textSize="10dp"
                           android:gravity="center"
                           android:background="@color/white"
                           android:text="NAME"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="75dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:layout_marginHorizontal="2dp"
                       android:orientation="vertical"
                       android:background="@color/darkTextColor">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textSize="10dp"
                           android:gravity="center"
                           android:background="@color/white"
                           android:text="PASSWORD"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="75dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:layout_marginHorizontal="2dp"
                       android:orientation="vertical"
                       android:background="@color/darkTextColor">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textSize="10dp"
                           android:gravity="center"
                           android:background="@color/white"
                           android:text="PROFILE"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="75dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:layout_marginHorizontal="2dp"
                       android:orientation="vertical"
                       android:background="@color/darkTextColor">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textSize="10dp"
                           android:gravity="center"
                           android:background="@color/white"
                           android:text="UPTIME"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/biruTeal"
               android:gravity="center"
               android:orientation="vertical">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/itemHotspotUser"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:listitem="@layout/row_hotspot_user_admin" />
           </LinearLayout>
           </LinearLayout>

       </LinearLayout>


