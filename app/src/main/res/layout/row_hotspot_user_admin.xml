<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/biruTeal"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:background="@color/grey"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="SERVER"/>
            <TextView
                android:id="@+id/rowHotspotUser_server"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="hotspot1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="NAME"/>
            <TextView
                android:id="@+id/rowHotspotUser_name"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="QwerTyUi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="PASSWORD"/>
            <TextView
                android:id="@+id/rowHotspotUser_password"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="QwerTyUi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="PROFILE"/>
            <TextView
                android:id="@+id/rowHotspotUser_profile"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="Harian-24-Jam-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="UPTIME"/>
            <TextView
                android:id="@+id/rowHotspotUser_uptime"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="00:00:00"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>