<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/biruTeal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@color/grey"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="SERVER"/>
            <TextView
                android:id="@+id/rowHotspotActive_server"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="hotspot1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="USER"/>
            <TextView
                android:id="@+id/rowHotspotActive_user"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="QwerTyUi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="UPTIME"/>
            <TextView
                android:id="@+id/rowHotspotActive_uptime"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="00:00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="IDLE TIME"/>
            <TextView
                android:id="@+id/rowHotspotActive_idleTime"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="00:00:00"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:paddingBottom="5dp"
        android:background="@color/grey"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="SESSION TIME"/>
            <TextView
                android:id="@+id/rowHotspotActive_sessionTime"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="00:00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@color/darkTextColor">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="MAC ADDRESS"/>
            <TextView
                android:id="@+id/rowHotspotActive_macAddress"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="9dp"
                android:text="08:00:27:4E:6C:93"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>